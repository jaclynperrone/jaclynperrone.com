<!doctype html>
<html>
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-16122727-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-16122727-1');
    </script>
  <% if current_page.data.type == "case study" %>
    <meta name="robots" content="noindex, nofollow, noimageindex">
  <% end %>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
<!--     <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&family=Fugaz+One&family=Work+Sans:wght@300;400;500&display=swap" rel="stylesheet"> -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&family=Fugaz+One&family=Work+Sans:wght@300;400;500&family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag "site" %>
  </head>
  <body>
    <div class="site-wrapper">
      <div class="site-body">
        <%= partial "site-header" %>
        <main>
          <%= yield %>
        </main>
        <!-- <%= partial "contact" %> -->
        <%= partial "footer" %>
      </div>
      <div class="site-social">
        <div class="site-social__sticky">
          <ul class="site-social__list list--contact">
            <li>
              <% link_to(
                "https://www.linkedin.com/in/jaclyniperrone/",
                target: "_blank",
                rel: "LinkedIn") do %>
                <%= image_tag "icon__linkedin.png",
                  :class => "site-social__icon",
                  :alt => "LinkedIn" %>
              <% end %>
            </li>
            <li>
              <% link_to(
                "https://github.com/jaclynperrone",
                target: "_blank",
                rel: "GitHub") do %>
                <%= image_tag "icon__github.png",
                  :class => "site-social__icon",
                  :alt => "GitHub" %>
              <% end %>
            </li>
            <li>
              <% link_to(
                "https://www.instagram.com/jaclynperr",
                target: "_blank",
                rel: "Instagram") do %>
                <%= image_tag "icon__instagram.png",
                  :class => "site-social__icon",
                  :alt => "Instagram" %>
              <% end %>
            </li>
            <li>
              <% link_to(
                "mailto:hello@jaclynperrone.com",
                target: "_blank",
                rel: "Email") do %>
                <%= image_tag "icon__email.png",
                  :class => "site-social__icon",
                  :alt => "Email" %>
              <% end %>


          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
